export function saveStorage (id, key, val) {
  let seller = localStorage.__seller__

  if (!seller) {
    seller = {}
    seller[id] = {}
  } else {
    seller = JSON.parse(seller)
    if (!seller[id]) {
      seller[id] = {}
    }
  }
  seller[id][key] = val
  localStorage.__seller__ = JSON.stringify(seller)

}

export function loadStorage (id, key, def) {
  let seller = localStorage.__seller__
  seller = JSON.parse(seller)

  if (!seller[id]) {
    return def
  }
  return seller[id][key]
}


